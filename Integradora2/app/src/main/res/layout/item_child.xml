<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del hijo -->
        <TextView
            android:id="@+id/tvChildName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Hijo"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <!-- Bot贸n para ver ubicaci贸n -->
        <Button
            android:id="@+id/btnViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Ubicaci贸n"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary_color"/>

        <!-- Bot贸n para modificar el nombre -->
        <Button
            android:id="@+id/btnEditChildName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Nombre"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary_dark"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
